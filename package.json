{
	"name": "main",
	"version": "0.1.0",
	"workspaces": ["packages/*"],
	"devDependencies": {
		"@biomejs/biome": "1.7.1",
		"@types/bun": "latest",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"typescript": "5.4.2"
	},
	"scripts": {
		"prepare": "husky",
		"ci": "bun --filter './packages/*' ci",
		"format": "bun --filter './packages/*' format",
		"lint": "bun --filter './packages/*' lint"
	},
	"lint-staged": {
		"*": [
			"biome lint ./packages/**/*.ts --no-errors-on-unmatched",
			"biome format --write ."
		]
	},
	"dependencies": {
		"find-my-way": "^8.1.0"
	}
}
